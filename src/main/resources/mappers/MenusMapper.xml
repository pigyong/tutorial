<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tutorial.infrastructure.mapper.MenusMapper">
  <resultMap id="BaseResultMap" type="com.tutorial.infrastructure.dao.MenusDao">
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="name" jdbcType="VARCHAR" property="name" />
    <result column="url" jdbcType="VARCHAR" property="url" />
    <result column="icon" jdbcType="VARCHAR" property="icon" />
    <result column="description" jdbcType="VARCHAR" property="description" />
    <result column="series" jdbcType="VARCHAR" property="series" />
  </resultMap>
  <sql id="Base_Column_List">
    id, name, url, icon, description, series
  </sql>
  <select id="queryMenuBySeries" resultType="com.tutorial.userinterface.vo.MenusVO">
    select name,url,icon,description,series from menus
  </select>

  <insert id="saveOrUpdate">
    insert into menus(name,url,icon,description) values(#{name},#{url},#{icon},#{desciption})
    on duplicate key update
    name=#{name},url=#{url},icon=#{icon},desciption=#{desciption}
  </insert>
</mapper>